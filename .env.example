# discord bot config
# required: your bot's token from https://discord.com/developers/applications
BOT_TOKEN=

# required: your bot's application/client ID
CLIENT_ID=

# optional: default guild ID for command deployment (development)
# if not set, you'll need to use --guild-id flag when deploying commands
GUILD_ID=

# AI provider config
# provider for your AI (KoboldCPP, Oobabooga, etc.)
# default: koboldcpp
API_PROVIDER=koboldcpp

# AI server config
# optional: API endpoint for your AI server (KoboldCPP, Oobabooga, etc.)
# default: http://localhost:5001
API_URL=http://localhost:5001

# optional: API key for AI services (if using OpenAI, Claude, etc.)
# leave empty for local AI servers
AI_API_KEY=

# logging config
# optional: enable debug logging (true/false)
# default: false
DEBUG=false

# memory config
# optional: Custom path for memory storage
# default: ./data/memory
MEMORY_STORAGE_PATH=

# function config
# optional: enable/disable AI functions (true/false)
# default: true
ENABLE_FUNCTIONS=true

# future providers config
# optional: OpenAI API key (for future OpenAI provider)
OPENAI_API_KEY=

# optional: Anthropic API key (for future Anthropic provider)
ANTHROPIC_API_KEY=

# optional: custom AI model name
# default: uses provider's default model
AI_MODEL=

# dev settings
# optional: node environment (development/production)
# default: development
NODE_ENV=development

# optional: custom config directory path
# default: ./config
CONFIG_PATH=

# optional: custom port for web dashboard (future feature)
# default: 3000
DASHBOARD_PORT=3000